.container {
  /* padding: 10rpx 30rpx; */
  width: calc( 100% - 60rpx );
  display: flex;
  margin: 10rpx 30rpx;
}
.image {
    width: 120rpx;
    height: 120rpx;
    margin: 20rpx;
}
.pro {
  width: calc( 100% - 10rpx);
  height: 100%;
  overflow: hidden;
}

.title {
  width: 100%;
  color: #1b1b1b;
  font-size: 14px;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break:nowrap;
}
.subtitle {
  width: 100%;
  color: #1b1b1b;
  font-size: 11px;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break:nowrap;
}
.subtitle-space {
  margin-left: 20rpx;
}
.rate-container {
  display: flex;
  margin-top: 10rpx;
}
.rate {
  width: auto;
  height: 24rpx;
  margin-right: 10rpx;
  padding: 0 10rpx;
  border-radius: 4rpx;
  background-color: #FFE500;
  font-size: 9px;
  text-align:center;
  display: inline-block;
}
.price {
  font-size: 15px;
  width: auto;
  font-weight: bold;
  color: #F63B29 !important;
}

.price-dec {
  font-size: 10px;
  text-decoration:line-through;
  margin-left: 10rpx;
  color: #666666;
  font-weight: 200;
}
.buyBtn {
  position: absolute;
  background-color: blue;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  right: 30rpx;
  top: 160rpx;
}