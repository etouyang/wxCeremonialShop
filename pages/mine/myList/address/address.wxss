@import '../../../../assets/style/title/title.wxss';
page {
  background-color: #F4F4F4;
  height: 100%;
}
.addressBlock {
  display: flex;
  width: 100%;
  flex-direction: column;
  height: 100%;
}
.addressBlock .list_box {
  display: flex;
  flex-direction: column;
}

.addressBlock .list_box .list_item {
  width: calc( 100% - 60rpx );
  margin: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0px 2rpx 6px -2rpx rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0px 2rpx 6px -2rpx rgba(0, 0, 0, 0.1);
}
.addressBlock .list_box .list_item .address-title {
  font-size: 15px;
  margin: 30rpx 30rpx 15rpx;
}
.addressBlock .list_box .list_item .address-name {
  margin: 0 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #F63A29;
  font-size: 15px;
}
.addressBlock .list_box .list_item .address-detail {
  margin: 0 30rpx;
  font-size: 15px;
  color: #999;
  line-height: 18px;
}
.addressBlock .list_box .list_item .line-space {
  width: calc( 100% - 60rpx );
  margin: 15rpx 30rpx 20rpx;
  height: 1rpx;
  background-color: #f4f4f4;
}
.addressBlock .list_box .list_item .address-bottom {
  margin: 0 30rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}
.addressBlock .list_box .list_item .address-default {
  display: flex;
  flex-direction: row;
}
.addressBlock .list_box .list_item .edit {
  width: 44rpx;
  height: 44rpx;
  margin-left: 60rpx;
}
.addressBlock .add-address {
  flex: 1;
  display: flex;
  align-items: flex-end;
}
.addressBlock .add-address .btn {
  width: calc( 100% - 60rpx );
  height: 76rpx;
  font-size: 15px;
  color: #fff;
  margin-left: 30rpx;
  margin-bottom: 15rpx;
  border-radius: 38rpx;
  background: linear-gradient(to right, #FC8259, #F24842);
  display: flex;
  align-items: center;
  justify-content: center;
}
/* checkbox未选中时样式  */
checkbox .wx-checkbox-input{
  border-radius: 50%;
  height: 34rpx;
  width: 34rpx;
  margin-top: -4rpx; 
}
/* checkbox选中时样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #FF6C5E;
  border: 1px solid #FF6C5E;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;/* 圆角 */
  width: 34rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  height: 34rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 34rpx;
  text-align: center;
  font-size:23rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  background: transparent;
  transform:translate(-48%, -48%) scale(1);
  -webkit-transform:translate(-48%, -48%) scale(1);
}
.no-data-div {
  width: 100%;
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

}

.no-data {
  width: 65%;
}

.no-data-tips {
font-size: 28rpx;
font-weight: normal;
color: rgba(97, 95, 96, 1);
}