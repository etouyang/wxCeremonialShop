@import '../../../assets/style/title/title.wxss';
page {
  background-color: #F4F4F4;
  height: 100%;
}
.fapiaoContainer {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}
.fapiaoContainer .list_box {
  display: flex;
  flex-direction: column;
}

.fapiaoContainer .list_box .list_item {
  width: calc( 100% - 60rpx );
  margin: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0px 2rpx 6px -2rpx rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0px 2rpx 6px -2rpx rgba(0, 0, 0, 0.1);
}

.fapiaoContainer .list_box .list_item .item {
  width: calc( 100% - 60rpx );
  height: 90rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
  font-size: 12px;
}

.fapiaoContainer .list_box .list_item .item .title {
  margin: 0 14rpx 0 0;
  width: 130rpx;
  color: #000000;
}
.fapiaoContainer .list_box .list_item .item .platform {
  display: flex;
  flex: 1;
  justify-content: space-between;
  color: #909090;
}
.textarea {
  margin-top: 5px;
  width: 100%;
  height: 95px;
}

.fapiaoContainer .add-address {
  flex: 1;
  display: flex;
  align-items: flex-end;
}
.fapiaoContainer .add-address .btn {
  width: calc( 100% - 60rpx );
  height: 76rpx;
  font-size: 15px;
  color: #fff;
  margin-left: 30rpx;
  margin-bottom: 15rpx;
  border-radius: 38rpx;
  background: linear-gradient(to right, #FC8259, #F24842);
  display: flex;
  align-items: center;
  justify-content: center;
}

radio .wx-radio-input{
  border-radius: 50%;
  height: 34rpx;
  width: 34rpx;
  margin-top: -4rpx; 
}
radio .wx-radio-input.wx-radio-input-checked{
  background: #FF6C5E !important;
  border: 1px solid #FF6C5E !important;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;/* 圆角 */
  width: 34rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  height: 34rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 34rpx;
  text-align: center;
  font-size:23rpx; /* 对勾大小 30rpx */
  color:#fff; /* 对勾颜色 白色 */
  background: transparent;
  transform:translate(-48%, -48%) scale(1);
  -webkit-transform:translate(-48%, -48%) scale(1);
}