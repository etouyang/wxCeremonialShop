page {
    background-color: #F4F4F4;
}
.container {
    width: 100%;
}
.headBg {
    width: 100%;
    background-color: coral;
}
.container {
    display: flex;
    flex-direction: column;
    background-color: #F4F4F4;
}
.searchContainer {
    display: flex;
    width: calc( 100% - 50rpx );
    margin-left: 30rpx;
    height: 70rpx;
}
.shopScore {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #FFF;
    height: 100rpx;
    align-items: center;
}
.select_box {
    height: 60rpx;
    padding: 0 10rpx;
    background-color: #FFF;
}
.select_box ul {
    display: flex;
    height: 60rpx;
}
.select_box ul li {
    height: 60rpx;
    line-height: 60rpx;
    flex: 1;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
    box-sizing: border-box;
}
.shop-active_tag {
    position: relative;
    height: 60rpx;
    color: #e82125;
}
  
.shop-active_tag .line {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: rgb(241, 156, 128);
}

.result_box {
    position: relative;
    background: #f3f3f3;
}
.item {
    width: 100%;
    height: 220rpx;
    background: #fff;
    border-bottom: 1px solid #b2b2b2
}
.item .goods {
    display: flex;
    flex: 1;
}
.item .goods .imgContainer {
    width: 200rpx;
    height: 200rpx;
    margin: 10rpx 10rpx 10rpx 20rpx;
}
.item .goods .imgContainer .img {
    width: 180rpx;
    height: 180rpx;
}
.item .goods .goods-title {
    flex: 1;
    display: flex;
    flex-direction: column;
    color: #505050;
    font-size: 16px;
    justify-content: space-between;
}
.item .goods .price {
    display: flex;
    justify-content: flex-end;
    margin-right: 30rpx;
    color: #e82125;
}
.shop-head-color {
    width: 100%;
    height: 80rpx;
    font-size: 16px;
    color: #333333;
    background-color: #FFFFFF;
    display: flex;
    align-items: center;
}
.shop-head-color .left {
    width: 20rpx;
    height: 30rpx;
    margin-left: 30rpx;
    border-left: 2px solid #e82125;
}
.shop-url-swiper {
    width: 100%;
    height: 350rpx;
    margin: 10rpx 0rpx;
}
.swiper-url {
    width: 100%;
    height: 100%;
}