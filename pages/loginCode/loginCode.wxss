page {
  background-color: #ffffff;
}
.container {
display: flex;
flex-direction: column;
}
.imgContainer {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.logo{
  border-radius: 10px;
  overflow: hidden;
}

.img {
  width: 300rpx;
  height: 300rpx;
}
.phoneContainer {
  width: calc( 100% - 100rpx );
  height: 94rpx;
  margin-left: 50rpx;
  border-radius: 47rpx;
  border: 1px solid #333333;
  background-color: #cccccc;
  display: flex;
  align-items: center;
}
.phoneInput {
  margin-left: 48rpx;
  font-size: 16px;
  line-height: 20px;
  color: #333333;
}
.codeContainer {
  margin-top: 30rpx;
  width: calc( 100% - 100rpx );
  height: 94rpx;
  margin-left: 50rpx;
  border-radius: 47rpx;
  border: 1px solid #333333;
  background-color: #cccccc;
  display: flex;
  align-items: center;
}
.codeBtn {
  width: 200rpx;
  /* margin-left: 30rpx; */
  padding-left: 15rpx;
  margin-right: 10rpx;
  border-left: 1px solid #333333;
  height: 55rpx;
  font-size: 16px;
  color: #333333;
  display: flex;
  justify-content: center;
}
.button {
  width: calc( 100% - 100rpx );
  margin-top: 50rpx;
  background-color: #1EC622;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.clause {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
  color: #666666;
}