@import '../../../../assets/style/title/title.wxss';
page {
  background-color: #F4F4F4;
}
.hongbaoBlock {
  display: flex;
  flex-direction: column;
  background-color: #F4F4F4;
}
.hongbaoBlock .select_box {
  display: flex;
  height: 88rpx;
}

.hongbaoBlock .select_box .item {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 15px;
  color: #999;
}

.hongbaoBlock .select_box .active_tag {
  position: relative;
  color: #F24842;
  font-size: 17px;
}

.hongbaoBlock .select_box .active_tag .line {
  position: absolute;
  bottom: 0;
  left: 100rpx;
  right: 100rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background: linear-gradient(to right, #FC8259, #F24842);
}

.hongbaoBlock .result_box .noneBox {
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.hongbaoBlock .result_box .noneBox image {
  width: 248rpx;
  height: 248rpx;
}

.hongbaoBlock .result_box .noneBox .text {
  font-size: 28rpx;
  color: #999;
}
