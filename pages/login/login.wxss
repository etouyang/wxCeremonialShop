page {
    background-color: #ffffff;
}
.container {
  display: flex;
  flex-direction: column;
}
  .imgContainer {
    width: 100%;
    height: 500rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
  }
  .logo{
    border-radius: 10px;
    overflow: hidden;
  }
  .img {
    width: 300rpx;
    height: 300rpx;
  }
  .btn {
    width: 80%;
    margin-top: 20rpx;
    background-color: #1EC622;
    color: white;
    border-radius: 98rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  .btnImg {
    margin-right: 8rpx;
    width: 46rpx;
    height: 46rpx;
  }
  .btn::after {
    border-radius: 98rpx;
    border: 0; 
  }
  .phoneContainer {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .phone {
    width: 250rpx;
    height: 80rpx;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: #666666;
    font-size: 15px;
    border-bottom: 1rpx solid #666666;
  }

  .zan-dialog__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0, 0, 0, 0.4);
    display: none;
  }
  
  .zan-dialog__container {
    position: fixed;
    bottom: 400rpx;
    width: 560rpx;
    /* height: 300rpx; */
    margin-left: calc( 50% - 280rpx );
    background: #f8f8f8;
    transform: translateY(300%);
    transition: all 0.4s ease;
    z-index: 12;
    border-radius: 20rpx;
    /* box-shadow: 0px 3px 3px 2px gainsboro; */
  }
  
  .zan-dialog--show .zan-dialog__container {
    transform: translateY(0);
  }
  
  .zan-dialog--show .zan-dialog__mask {
    display: block;
  }
  .toast-title {
    font-size: 20px;
    color: #333333;
    margin: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .toast-des {
    font-size: 15px;
    color: #333333;
    margin: 0 40rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .toast-btn-container {
    display: flex;
    margin-top: 30rpx;
    width: 100%;
    height: 80rpx;
    margin-top: 20rpx;
    flex-direction: row;
    justify-content: space-between;
    border-radius: 10rpx;
  }
  .toast-btn-left {
    color: #666666;
    flex: 1;
    border-bottom-left-radius: 10rpx;
  }
  .toast-btn-right {
    color: #FFFFFF;
    flex: 1;
    border-bottom-right-radius: 10rpx;
  }
  button::after{ 
    border: none; 
  }
  
  button {
    border-radius: 0;
  }