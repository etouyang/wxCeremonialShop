/* components/swiper/swiper.wxss */
.groupWrap{
    border-radius: 20rpx;
    position: relative;
    border: 1px solid #F242B5;
}
.groupContainer {
  padding: 20rpx;
}
.image {
  width: calc( 100% - 5rpx * 2);
  height: 130rpx;
  margin: 5rpx;
}
.timeContainer {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.time-dec {
  display: inline-block;
  font-size: 10px;
  height: 24rpx;
  color: #1A1A1A;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 5rpx;
}
.title-des {
  width: 100%;
  margin-top: 5rpx;
  color: #1b1b1b;
  font-size: 10px;
  color: #F63A29;
}
.title-price {
  margin-left: 5rpx;
  font-size: 12px;
}
.subtitle {
  width: 100%;
  color: #A5A4A4;
  font-size: 10px;
  text-decoration:line-through;
  display: flex;
  align-items: center;
  justify-content: center;
}
.finish-rate {
  height: 24rpx;
  border-radius: 4rpx;
  background-color: #F63A29;
  width: auto;
  padding: 0 5rpx;
  font-size: 8px;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rate {
  height: 34rpx;
  border-radius: 8rpx;
  background-color: yellow;
  font-size: 13px;
  width: auto;
  text-align:center;
  display: inline-block;
  padding: 0 10rpx;
}
.groupBtnContainer {
  width: 100%;
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.groupBtn {
  background-color: aqua;
  width: 100rpx;
  height: 32rpx;
  border-radius: 16rpx;
  font-size: 10px;
  text-align:center;
  background-color: #F242B5;
  color: #fff;
}