page {
    background-color: #F4F4F4;
}
.container {
    display: flex;
    flex-direction: column;
    background-color: #F4F4F4;
}
.head-swiper {
    width: 100%;
    height: 290rpx;
}
.home-shop-group {
    margin-top: 5rpx;
}
.shop-container-detail {
    display: flex;
    margin: 30rpx 30rpx 0;
    width: calc( 100% - 60rpx );
}
.shop-container-item {
    flex: 1;
    width: 50%;
}
.shop-left-item {
    width: calc( 100% - 14rpx);
    margin: 0 14rpx 30rpx 0;
    height: auto;
}
.shop-right-item {
    width: calc( 100% - 14rpx);
    margin: 0 0 30rpx 14rpx;
    height: auto;
}