@import '../../../assets/style/title/title.wxss';
page {
    background-color: #F4F4F4;
    font-size: 14px;
    color: #666666;
}
.back_box {
    /* margin-top: 80rpx; */
}
.box {
    margin-bottom: 10rpx;
    background-color: #FFFFFF;
    border-radius: 5rpx;
    padding: 20rpx;
}
.details_btn {
    display: flex;
    justify-content: center;
}
.btn {
    width: 200rpx;
    height: 60rpx;
    border-radius: 10rpx;
    background-color: #F63A29;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10rpx;
}
.lightColor {
    color: #F63A29;
}
.shop {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #ddd;
}
.goods {
    display: flex;
    border-bottom: 1px solid #ddd;
}
.goods-img {
    width: 200rpx;
    height: 200rpx;
    padding: 20rpx;
}
.goods-name {
    flex: 1;
    margin-top: 30rpx;
}
.goods-price {
    width: 130rpx;
    margin-top: 30rpx;
}
.location-container {
    width: 50rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
}
.location {
    width: 30rpx;
    height: 30rpx;
}