page {
  /* background-color: #F4F4F4; */
  background-color: #FFFFFF;
  height: 100%;
}
.container {
  /* padding-top: 100rpx; */
  box-sizing: border-box;
  height: 100%;
}

.locationImg {
  width: 40rpx;
  height: 40rpx;
  margin-top: 8rpx;
}

/* 城市列表 */

.list-city {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: #fff;
  position: relative;
}

.py {
  box-sizing: border-box;
  background: #eee;
  font-size: 23rpx;
  color: #aaa;
  padding: 10rpx 25rpx;
}

.fullname {
  box-sizing: border-box;
  font-size: 30rpx;
  color: #555;
  padding: 25rpx;
  border-bottom: 1rpx solid #eee;
}

.city-py {
  position: fixed;
  top: 50%;
  right: 0;
  margin-top: -360rpx;
}

.city-py view {
  font-size: 25rpx;
  width: 60rpx;
  height: 12px;
  line-height: 12px;
  text-align: center;
  color: #555;
}

.showPy {
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border-radius: 15rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 80rpx;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 3;
  color: #333;
  box-shadow: 0 0 150rpx rgba(0, 0, 0, 0.35);
}

.hot-city {
  border: 1rpx solid #eee;
  display: inline-block;
  margin: 25rpx 30rpx 0 30rpx;
  padding: 10rpx 25rpx;
  font-size: 25rpx;
  background-color: #F5F5F5;
}

.searchContainer {
  width: calc( 100% - 60rpx );
  margin-left: 30rpx;
  height: 70rpx;
  margin-top: 25rpx;
  z-index: 10;
  overflow-x:hidden;
  display: flex;
  align-items: center;
}

.tit_seabox_bar{
  width: calc( 100% - 300rpx );
  height: 70rpx;
  display: flex;
  align-items: center;
  border-radius: 35rpx;
  /* background: #fff; */
  background-color: #F4F4F4;
  padding-left: 32rpx;
  font-size: 16px;
}